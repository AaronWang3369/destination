<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
	http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

    <context:component-scan base-package="com.hzq.user"/>

    <bean id="propertyConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:db.properties</value>
                <value>classpath:dubbo-zk.properties</value>
            </list>
        </property>
    </bean>

    <aop:aspectj-autoproxy proxy-target-class="true"/>

    <import resource="classpath:application-db-base.xml"/>


    <dubbo:registry address="${dubbo.registry.address}"/>
    <dubbo:protocol port="${dubbo.protocol.port.user}"/>

    <dubbo:service retries="0" interface="com.hzq.user.service.MerchantInfoService" ref="merchantInfoService" version="${dubbo.service.user.merchantInfoService.version}"/>
    <dubbo:service retries="0" interface="com.hzq.user.service.ProductService" ref="productService" version="${dubbo.service.user.productService.version}"/>

</beans>